{
  "manifest_version": 2,
  "name": "Simple Space Invaders",
  "short_name": "SPACE INVADERS",
  "description": "Simple and lightweight Space Invaders Game written in JavaScript",
  "version": "1.0",
  "icons": { "16": "icon.png",
             "32": "icon.png",
             "48": "icon.png",
            "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}